@inproceedings{tosw-spknm-22,
  author = {Tehrani, Pouyan Fotouhi and Osterweil, Eric and Schmidt, Thomas C. and W\"{a}hlisch, Matthias},
  title = {{SoK: Public Key and Namespace Management in NDN}},
  booktitle = {Proc. of 9th ACM Conference on Information-Centric Networking (ICN)},
