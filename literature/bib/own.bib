@article{shwcp-dscma-11,
  author = "Thomas C. Schmidt and Gabriel Hege and Matthias W{\"a}hlisch and Hans L. Cycon and Mark Palkow and Detlev Marpe",
  title = "{Distributed SIP Conference Management with Autonomously Authenticated Sources and its Application to an H.264 Videoconferencing Software for Mobiles}",
