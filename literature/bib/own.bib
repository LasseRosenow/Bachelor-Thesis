@techreport{lkhpg-cwemr-18,
  author = {Martine Lenders and Peter Kietzmann and Oliver Hahm and Hauke Petersen and Cenk  G{\"u}ndogan and Emmanuel Baccelli and Kaspar Schleiser and Thomas C. Schmidt and Matthias W{\"a}hlisch},
  title = {{Connecting the World of Embedded Mobiles: The RIOT Approach to Ubiquitous Networking for the Internet of Things}},
